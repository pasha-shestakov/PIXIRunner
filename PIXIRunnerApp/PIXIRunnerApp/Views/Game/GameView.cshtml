@model Game
@{
    ViewData["Title"] = Model.name;
    var saves = ViewData["saves"] as List<SaveState>;

}

<h3>@Model.name</h3>
<div id="@Model.gameID" class="cont">
    <div id="gameCont">
        <canvas id="canvasOverlay"></canvas>
        <canvas id="gameBody"></canvas>
    </div>
    <div class="_overlay" id="store">
        <input class="closeBtn" id="closeStoreBtn" type="image" src="~/Games/1/images/UI/closeBtn.png" />
        <img class="store_background" src="~/Games/1/images/store/background.png" />
        <img class="store_sprite" src="~/Games/1/images/player/Pink_Monster_L.png" />
        <img class="closed_door" src="~/Games/1/images/store/closed_door.png" />
    </div>
    <div class="_overlay" id="settings">
        <input class="closeBtn" id="closeSettingsBtn" type="image" src="~/Games/1/images/UI/closeBtn.png" />
        <h1>Settings</h1>

        <h4>Volume</h4>
        <div class="form-group">
            <input id="disabled" type="checkbox" />
            <label class="form-check-label" for="disabled">Disable Sounds</label>
        </div>
        <div class="form-group slidecontainer">
            <label class="form-check-label" for="musicSlider">Music</label>
            <input id="musicSlider" class="slider" type="range" min="0" max="1" value="0.06" step="0.01">
        </div>
        <div class="form-group slidecontainer">
            <label class="form-check-label" for="effectsSlider">Sound Effects</label>
            <input id="effectsSlider" class="slider" type="range" min="0" max="1" value="0.10" step="0.01">
        </div>
    </div>

    <div id="overlay">
        <div id="launcher">
            <button> New Game</button>

            @if (saves != null)
            {
                @foreach (var save in saves)
                {
                    <button id="@save.saveStateID">Load Save @save.saveStateID</button>
                }
            }
        </div>
    </div>
</div>


@section Scripts
    {
    <script src="~/lib/matter-js/matter.min.js"></script>

    <script type="module" src="@("/Games/" + Model.gameID + "/js/gameSounds.js")"></script>
    <script type="module" src="@("/Games/" + Model.gameID + "/js/game_controller.js")"></script>


}